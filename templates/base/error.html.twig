<div style="border: 2px dashed red; margin: 10px;">

    <h2>
        {% block title %}
            Ошибка
        {% endblock %}
    </h2>

    <h3> Error Code</h3>
    {% block code %}
        {{ code }}
    {% endblock %}

    <h3> Error Message</h3>
    {% block message %}
        {{ message }}
    {% endblock %}

    <h3> Error Data</h3>
    {% block trace %}
    {% autoescape false %}{{ trace }}{% endautoescape %}
    {% endblock %}

</div>
